rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {

    // Helper function to check authentication
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper to check file size (max 5MB)
    function isValidSize() {
      return request.resource.size < 5 * 1024 * 1024;
    }

    // Helper to check if file is an image
    function isImage() {
      return request.resource.contentType.matches('image/.*');
    }

    // ============================================
    // RECIPE IMAGES
    // ============================================
    match /recipes/{imageId} {
      // Anyone can read recipe images
      allow read: if true;

      // Only authenticated users can upload images
      // Must be an image and under 5MB
      allow write: if isAuthenticated()
                   && isImage()
                   && isValidSize();
    }

    // ============================================
    // STEP IMAGES
    // ============================================
    match /steps/{imageId} {
      allow read: if true;
      allow write: if isAuthenticated()
                   && isImage()
                   && isValidSize();
    }

    // ============================================
    // USER PROFILE IMAGES
    // ============================================
    match /users/{userId}/{imageId} {
      allow read: if true;

      // Only the user can upload their own profile image
      allow write: if isAuthenticated()
                   && request.auth.uid == userId
                   && isImage()
                   && isValidSize();
    }

    // ============================================
    // CATEGORY IMAGES (admin only would require custom claims)
    // ============================================
    match /categories/{imageId} {
      allow read: if true;
      allow write: if isAuthenticated()
                   && isImage()
                   && isValidSize();
    }

    // Deny all other paths
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
