rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ============================================
    // RECIPES - Public read, authenticated write
    // ============================================
    match /recipes/{recipeId} {
      // Anyone can read public recipes
      // Authenticated users can read all (including their private ones)
      allow read: if resource.data.isPublic == true
                  || request.auth != null;

      // Only authenticated users can create
      allow create: if request.auth != null;

      // Only the creator can update/delete their recipes
      allow update, delete: if request.auth != null
                            && request.auth.uid == resource.data.createdBy;
    }

    // ============================================
    // STEPS - Follow recipe permissions
    // ============================================
    match /steps/{stepId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null;
    }

    // ============================================
    // CATEGORIES - Public read, admin write
    // ============================================
    match /categories/{categoryId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // ============================================
    // USERS - Public read profile, private write
    // ============================================
    match /users/{userId} {
      // Anyone can read basic profile info
      allow read: if true;

      // Only the user can write their own profile
      allow write: if request.auth != null
                   && request.auth.uid == userId;
    }

    // ============================================
    // FAVORITES - Private to each user
    // ============================================
    match /favorites/{favoriteId} {
      allow read, write: if request.auth != null;
    }

    // ============================================
    // INGREDIENTS - Public read, authenticated write
    // ============================================
    match /ingredients/{ingredientId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // ============================================
    // REVIEWS - Public read, authenticated write own reviews
    // ============================================
    match /reviews/{reviewId} {
      allow read: if true;
      allow create: if request.auth != null
                    && request.resource.data.userId == request.auth.uid
                    && request.resource.data.rating >= 1
                    && request.resource.data.rating <= 5;
      allow update: if request.auth != null
                    && request.auth.uid == resource.data.userId;
      allow delete: if request.auth != null
                    && request.auth.uid == resource.data.userId;
    }
  }
}
